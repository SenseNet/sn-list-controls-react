{
    "compilerOptions": {
        "strict": true,
        "noUnusedLocals": true,
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compileOnSave": false,
    "references": [
        {
            "path": "./src/ContentList"
        },
        {
            "path": "./src/ExampleApp"
        },
        {
            "path": "./src/Tests"
        }
    ]
}